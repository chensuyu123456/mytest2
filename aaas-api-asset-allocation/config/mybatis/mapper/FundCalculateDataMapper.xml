<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shellshellfish.aaas.assetallocation.neo.mapper.FundCalculateDataMapper">

    <!--关联查询净值数据 -->
    <resultMap id="covarianceModelMap" type="com.shellshellfish.aaas.assetallocation.neo.entity.CovarianceModel">

        <result property="navDate" column="NAVLATESTDATE" />
        <result property="codeA" column="A_CODE" />
        <result property="unitNavA" column="A_UNITNAV" />
        <result property="codeB" column="B_CODE" />
        <result property="unitNavB" column="B_UNITNAV" />

    </resultMap>


    <insert id="insertFundCalculateDataDay" parameterType="com.shellshellfish.aaas.assetallocation.neo.entity.FundCalculateData" >
        INSERT INTO
        fund_calculate_data_day
        (code,yield_ratio,risk_ratio,nav_date,semi_variance)
        VALUES
        (#{code},#{yieldRatio},#{riskRatio},#{navDate},#{semiVariance})
    </insert>

    <insert id="insertFundCalculateDataWeek" parameterType="com.shellshellfish.aaas.assetallocation.neo.entity.FundCalculateData" >
        INSERT INTO
        fund_calculate_data_week
        (code,yield_ratio,risk_ratio,nav_date,semi_variance)
        VALUES
        (#{code},#{yieldRatio},#{riskRatio},#{navDate},#{semiVariance})
    </insert>

    <insert id="insertFundCalculateDataMonth" parameterType="com.shellshellfish.aaas.assetallocation.neo.entity.FundCalculateData" >
        INSERT INTO
        fund_calculate_data_month
        (code,yield_ratio,risk_ratio,nav_date,semi_variance)
        VALUES
        (#{code},#{yieldRatio},#{riskRatio},#{navDate},#{semiVariance})
    </insert>

    <insert id="insertFundCalculateDataYear" parameterType="com.shellshellfish.aaas.assetallocation.neo.entity.FundCalculateData" >
        INSERT INTO
        fund_calculate_data_year
        (code,yield_ratio,risk_ratio,nav_date,semi_variance)
        VALUES
        (#{code},#{yieldRatio},#{riskRatio},#{navDate},#{semiVariance})
    </insert>


    <select id="findYieldRatio"  resultType="java.lang.Double" statementType="STATEMENT">
        SELECT
        yield_ratio
        FROM ${tableName}
        WHERE code='${code}' AND nav_date='${selectDate}'
    </select>

    <select id="findRiskRatio"  resultType="java.lang.Double" statementType="STATEMENT">
        SELECT
        risk_ratio
        FROM ${tableName}
        WHERE code='${code}' AND nav_date='${selectDate}'
    </select>
</mapper>